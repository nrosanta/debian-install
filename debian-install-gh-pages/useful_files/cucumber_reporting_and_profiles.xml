		</dependency>

		<dependency>
			<groupId>net.masterthought</groupId>
			<artifactId>maven-cucumber-reporting</artifactId>
			<version>3.4.0</version>
			<scope>compile</scope>
		</dependency>



	</dependencies>

	<profiles>
		<profile>
			<id>SIT</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<build.profile.id>SIT</build.profile.id>
				<report.path>${project.basedir}/reports/${build.profile.id}</report.path>
			</properties>
			<build>
				<resources>
					<resource>
						<directory>${project.basedir}/src/test/resources/environment/${build.profile.id}</directory>
					</resource>
				</resources>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>${maven-surefire-plugin.version}</version>
						<configuration>
							<systemPropertyVariables>
								<propertyName>tagName</propertyName>
								<build.profile.id>SiT</build.profile.id>

								<cucumber.options>
									--plugin
									json:${project.basedir}/reports/cucumber.json
									--tags ${tagName}
								</cucumber.options>


							</systemPropertyVariables>
							<includes>
								<!-- Include your Cucumber tests -->
								<include>**/*RunCukesTest.java</include>
							</includes>
							<reportFormat>plain</reportFormat>
						</configuration>
					</plugin>

					<plugin>
						<groupId>net.masterthought</groupId>
						<artifactId>maven-cucumber-reporting</artifactId>
						<version>3.4.0</version>
						<executions>
							<execution>
								<id>execution</id>
								<phase>verify</phase>
								<goals>
									<goal>generate</goal>
								</goals>
								<configuration>
									<projectName>${build.profile.id} ${project.artifactId}</projectName>


									<outputDirectory>${report.path}</outputDirectory>
									<cucumberOutput>${project.basedir}/reports/cucumber.json</cucumberOutput>


									<skippedFails>true</skippedFails>
									<enableFlashCharts>false</enableFlashCharts>

								</configuration>
							</execution>
						</executions>
					</plugin>

				</plugins>
				<filters>
					<filter>${project.basedir}/src/test/resources/environment/${build.profile.id}/config.properties</filter>
				</filters>
			</build>
			<reporting>
				<outputDirectory>${report.path}</outputDirectory>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-report-plugin</artifactId>
						<version>${maven-surefire-plugin.version}</version>
					</plugin>
				</plugins>
			</reporting>
		</profile>


	</profiles>

</project>
